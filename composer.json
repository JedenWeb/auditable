{
    "name": "jedenweb/auditable",
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "nette/di": "^2.4|^3.0",
        "nette/application": "^2.4|^3.0",
        "doctrine/orm": "^2.6",
        "ramsey/uuid-doctrine": "^1.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.10.1",
        "phpstan/phpstan-doctrine": "^0.10.0",
        "phpstan/phpstan-nette": "^0.10.0",
        "nette/tester": "^2.0",
        "mockery/mockery": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "JedenWeb\\AuditableModule\\": "src"
        }
    },
    "scripts": {
        "phpstan":"phpstan analyse -c phpstan.neon -l7 src/ tests/ --ansi",
        "tester":"tester tests/",
        "all": [
            "@phpstan",
            "@tester"
        ]
    }
}
